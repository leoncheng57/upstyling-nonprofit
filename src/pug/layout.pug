- var about_us_url = "./about-us.html"
- var mission_url = "./mission.html"
- var charities_url = "./charities.html"
- var how_help_url = "./how-help.html"

- var etsy_url = "https://www.etsy.com/people/dxofzbsy"
- var insta_url = "https://www.instagram.com/_upstyling/"
