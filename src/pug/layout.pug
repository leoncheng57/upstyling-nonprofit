mixin navbar
    div#topnav
        //- Mobile Hamburger Menu
        div.mobile-version
            a(href=`${homepage_url}`)
                p.logotext upstyling
            div#hamburger
                div.patty 
                div.patty 
                div.patty 
        //- Desktop Top Navbar
        div.desktop-version
            a(href=`${homepage_url}`)
                p.logotext upstyling
            a(href=`${about_us_url}`)
                p ABOUT US
            a(href=`${mission_url}`)
                p MISSION
            a(href=`${charities_url}`)
                p CHARITIES
            a(href=`${how_help_url}`)
                p HOW YOU CAN HELP
            div.spacer
            a(href=`${insta_url}`)
                img(src="../imgs/top-nav/insta-icon.svg")
            a(href=`${etsy_url}`)
                img(src="../imgs/top-nav/etsy-icon.svg")
            a(href=`${facebook_url}`)
                img(src="../imgs/top-nav/facebook-icon.svg")
    //- Fullscreen Nav Menu for Mobile
    div#mobile-menu
        img#close-icon(src="../imgs/top-nav/close-icon.svg")
        a(href=`${homepage_url}`)
            p.logotext upstyling
        div.breakline
        a(href=`${homepage_url}`)
            p HOME
        a(href=`${about_us_url}`)
            p ABOUT US
        a(href=`${mission_url}`)
            p MISSION
        a(href=`${charities_url}`)
            p CHARITIES
        a(href=`${how_help_url}`)
            p HOW YOU CAN HELP
        div.social-icons
            a(href=`${insta_url}`)
                img(src="../imgs/top-nav/insta-icon.svg")
            a(href=`${etsy_url}`)
                img(src="../imgs/top-nav/etsy-icon.svg")
            a(href=`${facebook_url}`)
                img(src="../imgs/top-nav/facebook-icon.svg")


